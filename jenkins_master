import groovy.json.JsonSlurper

pipeline {
    agent any

    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }


        stage('Tigger the Slave Jobs') {
            steps {
                script {
                    def data = new File('data.json').text
                    def jsonSlurper = new JsonSlurper()
                    def jsonData = jsonSlurper.parseText(data)
                    echo "Name: ${jsonData.name}, Age: ${jsonData.age}"
                    echo 'Start Trigger to send name and age to slave'
                    build job: 'slave', parameters: [string(name: 'NAME', value: jsonData.name), string(name: 'Ages', value: jsonData.age)]
                }
            }
        }
    }
}